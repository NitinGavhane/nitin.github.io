---
// src/components/BookCard.astro
interface Props {
  title: string;
  author: string;
  coverImage: string;
  description: string;
  price: string;
  pages: number;
  publishDate: string;
  amazonLink: string;
}

const { 
  title,
  author,
  coverImage,
  description,
  price,
  pages,
  publishDate,
  amazonLink 
} = Astro.props;
---

<a 
  href={amazonLink} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="group bg-gray-800 dark:bg-gray-700 rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
>
  <div class="aspect-[3/4] overflow-hidden">
    <img 
      src={coverImage} 
      alt={`Cover of ${title} by ${author}`}
      class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
  </div>
  
  <div class="p-6">
    <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-blue-400 transition-colors">
      {title}
    </h3>
    
    <p class="text-gray-400 text-sm mb-4 line-clamp-3">
      {description}
    </p>
    
    <div class="flex justify-between items-center">
      <span class="text-blue-400 font-semibold">{price}</span>
      <span class="text-gray-500 text-sm">{pages} pages</span>
    </div>
    
    <div class="mt-4 text-sm text-gray-500">
      Published: {publishDate}
    </div>
  </div>
  
  <div class="px-6 py-4 bg-gray-700 dark:bg-gray-600 border-t border-gray-600 dark:border-gray-500">
    <span class="inline-block w-full text-center py-2 px-4 bg-gradient-to-r from-blue-500 to-purple-600 
                rounded-lg text-white font-medium hover:from-blue-600 hover:to-purple-700 
                transition-all duration-200">
      Buy on Amazon
    </span>
  </div>
</a>