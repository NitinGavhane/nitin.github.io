---
interface Props {
  title: string;
  description: string;
  image: string;
  link?: string;
}

const { title, description, image, link } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-1">
  <div class="relative">
    <img 
      src={image} 
      alt={title}
      class="w-full h-56 object-cover"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-3">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
    {link && (
      <a 
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:underline"
      >
        Read More
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    )}
  </div>
</article>