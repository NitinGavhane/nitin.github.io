---
interface Props {
  title: string;
  description: string;
  link: string;
  pubDate: string;
  thumbnail: string;
}

const { title, description, link, pubDate, thumbnail } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-1">
  <a href={link} target="_blank" rel="noopener noreferrer" class="block">
    <img 
      src={thumbnail} 
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="p-6">
      <p class="text-sm text-primary-600 dark:text-primary-400 mb-2">{pubDate}</p>
      <h3 class="text-xl font-bold mb-2 line-clamp-2">{title}</h3>
      <p class="text-gray-600 dark:text-gray-300 line-clamp-3">{description}</p>
      <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400">
        <span>Read on Medium</span>
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </div>
    </div>
  </a>
</article>